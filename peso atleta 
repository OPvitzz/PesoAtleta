programa {
  funcao inicio() {
    real peso
  
  escreva("digite seu peso: ")
  leia(peso)

    se(peso <=57){
      escreva("sua categoria é peso pena")
    }
    senao se(peso <64){
     escreva("sua categoria é peso leve") 
    }
    senao se(peso <69){
      escreva("sua categoria é peso meio médio")
    }
    senao se(peso <75){
      escreva("sua categoria é peso médio")
    }
    senao se(peso <81){
      escreva("sua categoria é peso meio pesado")
    }
    senao se(peso <91){
      escreva("sua categoria é peso pesado")
    }
  }
}
